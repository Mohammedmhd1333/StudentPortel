@model StudentPortel.Web.Models.Entities.Student

<h1>Edit Student</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Phone</label>
        <input type="text" class="form-control" asp-for="Phone" />
    </div>
    <div class="mt-3">
        <label class="form-label">Job</label>
        <input type="text" class="form-control" asp-for="Job" />
    </div>

    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Sucribed" asp-for="Subscribed" />
        <label class="form-check-label" for="Sucribed">Sucribed</label>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
