@model StudentPortel.Web.Models.Entities.Addcomplaint

@{
    ViewData["Title"] = "Add Complaint";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="EmployeeId" class="control-label"></label>
        <input  asp-for="EmployeeId" class="form-control"  />
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployeeName" class="control-label"></label>
        <input asp-for="EmployeeName" class="form-control" />
        <span asp-validation-for="EmployeeName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Department" class="control-label"></label>
        <input asp-for="Department" class="form-control" />
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkLocation" class="control-label"></label>
        <input asp-for="WorkLocation" class="form-control" />
        <span asp-validation-for="WorkLocation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="suggestions" class="control-label"></label>
        <textarea asp-for="suggestions" class="form-control"></textarea>
        <span asp-validation-for="suggestions" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
