@model IEnumerable<StudentPortel.Web.Models.Entities.Addcomplaint>

@{
    var employeeId = TempData["hallo"];

    if (employeeId.ToString() == "EMP004")
    {
        Layout = "~/Views/Shared/_Layoutadmin.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            // Check if employeeId is not null or undefined
            var employeeId = '@employeeId';

