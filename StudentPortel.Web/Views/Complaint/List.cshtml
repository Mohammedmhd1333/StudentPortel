<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Created Date</th>
            <th>Employee Id</th>
            <th>Employee Name</th>
            <th>Department</th>
            <th>Work Location</th>
            <th>Suggestions</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var complaint in Model)
        {
            <tr>
                <td>@complaint.CreatedDate.ToString("MMM dd, yyyy")</td>
                <td>@complaint.EmployeeId</td>
                <td>@complaint.EmployeeName</td>
                <td>@complaint.Department</td>
                <td>@complaint.WorkLocation</td>
                <td>@complaint.suggestions</td>
                <td>@complaint.Status</td>
                <td>
                    <a href="@Url.Action("Details", new { id = complaint.Id })" class="btn btn-info">Show</a>
                </td>
            </tr>
        }
    </tbody>
</table>
